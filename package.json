{
  "name": "orangehrm",
  "version": "1.0.0",
  "main": "cypress.config.js",
  "type": "commonjs",
  "scripts": {
    "clean:reports": "rmdir /s /q cypress\\reports && mkdir cypress\\reports",
    "cypress:run": "npx cypress run --reporter mochawesome --reporter-options reportDir=cypress/reports,overwrite=false,html=false,json=true",
    "merge:reports": "npx mochawesome-merge cypress/reports/*.json > cypress/reports/output.json",
    "generate:html": "npx marge cypress/reports/output.json --reportDir cypress/reports/html",
    "cypress:report": "npm run clean:reports && npm run cypress:run && npm run merge:reports && npm run generate:html"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "devDependencies": {
    "cypress": "^15.5.0",
    "dotenv": "^17.2.3",
    "mochawesome": "^7.1.4",
    "mochawesome-merge": "^5.0.0",
    "mochawesome-report-generator": "^6.2.0"
  }
}
